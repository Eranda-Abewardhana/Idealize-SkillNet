<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkillNet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/lite_black</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lite_gold</item>
        <item name="colorSecondaryVariant">@color/gold</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlNormal">@color/gray</item> <!-- Unselected star color -->
        <item name="colorControlActivated">@color/gold</item> <!-- Selected star color -->
        <item name="colorControlHighlight">@color/gold</item> <!-- Highlighted star color -->
    </style>
</resources>