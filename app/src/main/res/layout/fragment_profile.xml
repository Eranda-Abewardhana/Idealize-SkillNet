<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context=".Fragments.ProfileFragment"
    android:gravity="center_horizontal">

    <!-- Profile Picture -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:layout_centerInParent="true"
        android:src="@drawable/person" />
    <!-- Name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Jhon Peters"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Profession -->
    <TextView
        android:id="@+id/profession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interior Designer"
        android:textSize="16sp"
        android:textColor="#000000" />

    <!-- Location -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:src="@drawable/location"
            android:contentDescription="Location Icon" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Nawala, Sri Lanka"
            android:textSize="14sp"
            android:textColor="#888888" />
    </LinearLayout>

    <!-- Buttons Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="Edit Profile"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF" />

        <!-- Post Project Button -->
        <Button
            android:id="@+id/btn_post_project"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:text="Post Project"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Settings Button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">
        <Button
            android:id="@+id/btn_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Curved Scroll View -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="10dp"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/completed_projects_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_margin="16dp"
                android:text="Completed Projects"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <GridLayout
                android:id="@+id/completed_projects_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:padding="16dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:src="@drawable/img_3"
                    android:contentDescription="Project 1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:src="@drawable/img_3"
                    android:contentDescription="Project 2" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:src="@drawable/img_3"
                    android:contentDescription="Project 2" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:src="@drawable/img_3"
                    android:contentDescription="Project 3" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:src="@drawable/img_3"
                    android:contentDescription="Project 4" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:src="@drawable/img_3"
                    android:contentDescription="Project 2" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:src="@drawable/img_3"
                    android:contentDescription="Project 4" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:src="@drawable/img_3"
                    android:contentDescription="Project 4" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:src="@drawable/img_3"
                    android:contentDescription="Project 4" />
            </GridLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>
